<%- include('../partials/header') %>

<table>
<thead>
    <tr>
    <th>Airline</th>
    <th>Aiport</th>
    <th>Flight Number</th>
    <th>Departure</th>
    <th>Details</th>
    <th>Delete</th>
    </tr>
</thead>
<tbody>
    <% flights.forEach(function(f) { %>
    <tr>
        <td><%= f.airline %></td>
        <td><%= f.airport %></td>
        <td><%= f.flightNo %></td>
        <td><%= f.departs %></td>
        <td><a href="/flights/<%= f._id %>">More Info</a></td>
        <td>
            <form action="/flights/<%= f.id %>?_method=DELETE" method="POST" class="delete-form">
                <button type="submit">X</button>
            </form>
        </td>
    </tr>
<% }); %>
</tbody>
</table>
  
<%- include('../partials/footer') %>