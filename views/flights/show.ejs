<%- include('../partials/header') %>
<section id="show-page">
    <div>Airline: <%= flight.airline %></div>
    <div>Airport: <%= flight.airport %></div>
    <div>Flight Number: <%= flight.flightNo %></div>
    <div>Departing: <%= flight.departs %></div>
    <div><a href="/flights/<%= flight._id %>/edit">Edit</a></div>
</section>

<br><br><h2>Add New Destination</h2>
<form id="add-destination-form" method="POST" action="/flights/<%= flight._id %>/destinations">
    <label>Airport: </label>
    <select name="airport">
        <option value="AUS">AUS</option>
        <option value="DFW">DWF</option>
        <option value="DEN">DEN</option>   
        <option value="LAX">LAX</option>
        <option value="SAN">SAN</option>
    </select><br><br>
    <label>Arrival:</label>
    <input type="datetime-local" id="arrivals" name="arrivals"><br>
    <input type="submit" value="Add Destination">
</form>




<% if (flight.destinations.length) { %>
    <table>
      <thead>
        <tr>
          <th>Timestamp</th>
          <th>Airport</th>
          <th>Arrival</th>
        </tr>
      </thead>
      <tbody>
        <% flight.destinations.forEach(function(f) { %>
          <tr>
            <td><%= f.createdAt.toLocaleDateString() %></td>
            <td><%= f.airport %></td>
            <td><%= f.arrival %></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  <% } else { %>
    <h5>No Destinations Yet</h5>
  <% } %>



<%- include('../partials/footer') %>