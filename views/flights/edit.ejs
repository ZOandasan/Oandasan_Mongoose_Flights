<%- include('../partials/header') %>



<form id="edit-form" action="/flights/<%= flight._id %>?_method=PUT" method="POST">
    <label>Airline:</label>
    <select name="airline">
        <% if (flight.airline === 'American') { %>
            <option value="American" selected>American</option>
        <% } else { %>
            <option value="American">American</option>
        <% } %>
        
        <% if (flight.airline === 'Southwest') { %>
            <option value="Southwest" selected >Southwest</option>
        <% } else { %>
            <option value="Southwest">Southwest</option>
        <% } %>

        <% if (flight.airline === 'United') { %>
            <option value="United" selected>United</option>
        <% } else { %>
            <option value="United">United</option>
        <% } %>
        
    </select><br>
    <label>Airport</label>
    <select name="airport">
        <% if (flight.airport === 'AUS') { %>
            <option value="AUS" selected >AUS</option>
        <% } else { %>
            <option value="AUS">AUS</option>
        <% } %>
        
        <% if (flight.airport === 'DFW') { %>
            <option value="DFW" selected >DFW</option>
        <% } else { %>
            <option value="DFW">DFW</option>
        <% } %>
        
        <% if (flight.airport === 'DEN') { %>
            <option value="DEN" selected >DEN</option>
        <% } else { %>
            <option value="DEN">DEN</option>
        <% } %>

        <% if (flight.airport === 'LAX') { %>
            <option value="LAX" selected >LAX</option>
        <% } else { %>
            <option value="LAX">LAX</option>
        <% } %>
        
        <% if (flight.airport === 'SAN') { %>
            <option value="SAN" selected>SAN</option>
        <% } else { %>
            <option value="SAN">SAN</option>
        <% } %>
        
    </select><br>
    <label>Flight Number (Number between 10 & 9999):</label>
    <input type="text" name="flightNo" value="<%= flight.flightNo %>"><br>
    <label>Departs:</label>
    <input type="datetime-local" id="departs" name="departs" value="<%= flight.departs %>"><br>
    <input type="submit" value="Edit Flight">
  </form>


<%- include('../partials/footer') %>